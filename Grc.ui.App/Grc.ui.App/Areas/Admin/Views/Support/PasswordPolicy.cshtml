@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "CONFIGURATIONS";
}
@model AdminDashboardModel
@{
    var component = new PageComponentViewModel
    {
        ComponentId = "1",
        ComponentKey = "Password",
        LeftActions = new List<ComponentAction>
        {
            new ComponentAction { ActionKey = ActionKey.AdminHome.GetDescription(), Icon = "mdi mdi-home-outline", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Home") },
            new ComponentAction { ActionKey = ActionKey.Separator.GetDescription()},
            new ComponentAction { ActionKey = ActionKey.New.GetDescription(), Icon = "mdi mdi-account-multiple-plus-outline", Tooltip = ILocalize.GetLocalizedLabel("App.Label.New") },
            new ComponentAction { ActionKey = ActionKey.Separator.GetDescription()},
            new ComponentAction { ActionKey = ActionKey.LockAccount.GetDescription(), Icon = "mdi mdi-lock", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Lock") },
            new ComponentAction { ActionKey = ActionKey.Email.GetDescription(), Icon = "mdi mdi-email-outline", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Email") }
        }
    };
}

<!-- role list -->
@await Component.InvokeAsync("BaseComponent", new { model = component, content = Component.InvokeAsync("PasswordConfig") })