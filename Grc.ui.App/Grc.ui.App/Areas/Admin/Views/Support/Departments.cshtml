
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Departments";
}
@model AdminDashboardModel
@{
    var component = new PageComponentViewModel
    {
        ComponentId = $"1",
        ComponentKey = ComponentKey.Departments.GetDescription(),
        LeftActions = new List<ComponentAction>
        {
            new ComponentAction { ActionKey = ActionKey.AdminHome.GetDescription(), Icon = "mdi mdi-home-outlined", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Home") },
            new ComponentAction { ActionKey = ActionKey.Separator.GetDescription()},
            new ComponentAction { ActionKey = ActionKey.NewDept.GetDescription(), Icon = "mdi mdi-plus", Tooltip = ILocalize.GetLocalizedLabel("App.Label.New") }
        }
    };
}

<!-- departments -->
@await Component.InvokeAsync("BaseComponent", new {model = component, content = Component.InvokeAsync("DepartmentList")})

