@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "SYSTEM ROLES";
}
@model AdminDashboardModel
@{
    var component = new PageComponentViewModel
    {
        ComponentId = "1",
        ComponentKey = "Roles",
        LeftActions = new List<ComponentAction>
        {
            new ComponentAction { ActionKey = ActionKey.SupportHome.GetDescription(), Icon = "mdi mdi-home-outlined", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Home") },
            new ComponentAction{ ActionKey = ActionKey.RoleNew.GetDescription(), Icon = "mdi mdi-plus", Tooltip = ILocalize.GetLocalizedLabel("App.Label.New") }
            
        }
    };
}

<!-- role list -->
@await Component.InvokeAsync("BaseComponent", new { model = component, content = Component.InvokeAsync("RoleList") })