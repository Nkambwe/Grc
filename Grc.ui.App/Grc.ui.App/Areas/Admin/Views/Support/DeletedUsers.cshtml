@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "DELETED USERS";
}
@model AdminDashboardModel
@{
    var component = new PageComponentViewModel
    {
        ComponentId = "1",
        ComponentKey = "DeletedUsers",
        LeftActions = new List<ComponentAction> {
            new ComponentAction { ActionKey = ActionKey.AdminHome.GetDescription(), Icon = "mdi mdi-home-outline", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Home") },
            new ComponentAction { ActionKey = ActionKey.Separator.GetDescription()},
            new ComponentAction { ActionKey = ActionKey.NewUser.GetDescription(), Icon = "mdi mdi-account-multiple-plus-outline", Tooltip = ILocalize.GetLocalizedLabel("App.Label.New") },
            new ComponentAction { ActionKey = ActionKey.EditUser.GetDescription(), Icon = "mdi mdi-account-edit-outline", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Edit") },
            new ComponentAction { ActionKey = ActionKey.DeleteUser.GetDescription(), Icon = "mdi mdi-account-minus-outline", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Delete") },
        }
    };
}

<!-- user list -->
@await Component.InvokeAsync("BaseComponent", new { model = component, content = Component.InvokeAsync("DeletedUserList") })