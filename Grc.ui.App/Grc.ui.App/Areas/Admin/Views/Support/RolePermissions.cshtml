@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "ROLE PERMISSIONS";
}
@model AdminDashboardModel
@{
    var component = new PageComponentViewModel
    {
        ComponentId = "1",
        ComponentKey = "RolePermissions",
        LeftActions = new List<ComponentAction>
        {
            new ComponentAction { ActionKey = ActionKey.RoleNew.GetDescription(), Icon = "mdi mdi-plus", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Role") },
        }
    };
}

<!-- role list -->
@await Component.InvokeAsync("BaseComponent", new { model = component, content = Component.InvokeAsync("RolePermissionsList") })