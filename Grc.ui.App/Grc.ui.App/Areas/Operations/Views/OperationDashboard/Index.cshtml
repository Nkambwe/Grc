@model OperationsDashboardModel
@{
    Layout = "_OperationLayout";
    ViewData["Title"] = "Dashboard";

    var procTotal = Model.DashboardStatistics.UnitProcesses.TotalUnitProcess.TotalProcesses;
    var cancelTotal = Model.DashboardStatistics.UnitProcesses.CancelledProcesses.TotalProcesses;
    var completeTotal = Model.DashboardStatistics.UnitProcesses.CompletedProcesses.TotalProcesses;
    var unchangedTotal = Model.DashboardStatistics.UnitProcesses.UnchangedProcesses.TotalProcesses;
    var dormantTotal = Model.DashboardStatistics.UnitProcesses.DormantProcesses.TotalProcesses;
    var propsTotal = Model.DashboardStatistics.UnitProcesses.ProposedProcesses.TotalProcesses;
    var dueTotal = Model.DashboardStatistics.UnitProcesses.ProcessesDueForReview.TotalProcesses;

    var catTotals = Model.DashboardStatistics.ProcessCategories.TotalCategoryProcesses.Total;
    var catTotalAcc = Model.DashboardStatistics.ProcessCategories.AccountServiceProcesses.Total;
    var catTotalCash = Model.DashboardStatistics.ProcessCategories.CashProcesses.Total;
    var catTotalRecon = Model.DashboardStatistics.ProcessCategories.ReconciliationProcesses.Total;
    var catTotalRecord = Model.DashboardStatistics.ProcessCategories.RecordsMgtProcesses.Total;
    var catTotalWallet = Model.DashboardStatistics.ProcessCategories.WalletProcesses.Total;
    var catTotalPay = Model.DashboardStatistics.ProcessCategories.PaymentProcesses.Total;
    var catTotalChannel = Model.DashboardStatistics.ProcessCategories.ChannelProcesses.Total;
    var catTotalCx = Model.DashboardStatistics.ProcessCategories.CustomerExperienceProcesses.Total;
}

<div class="welcome-container">
    <div class="welcome-container-message">
        <span class="display-1">@Model.WelcomeMessage</span>
    </div>
    <div class="incon-container-expand">
        <button id="expandBtn" type="button" class="icon-btn">
            <span>
                <i id="toggleIcon" class="mdi mdi-arrow-expand"></i>
            </span>
        </button>
    </div>

</div>

<div class="action-box">
    <div class="title-box">
        <h3 class="display-1 action-box-title">@Html.Raw(ILocalize.GetLocalizedLabel("App.Menu.Dashboard.Labels.Quick"))</h3>
        <span class="title-line"></span>
    </div>

    @await Component.InvokeAsync("QuickActions", new { model = Model.QuickActions })
</div>

<div class="stats-grid">

    <div class="title-box">
        <h3 class="display-1 stats-grid-title">@Html.Raw(ILocalize.GetLocalizedLabel("App.Menu.Dashboard.Labels.Processes"))</h3>
        <span class="title-line"></span>
