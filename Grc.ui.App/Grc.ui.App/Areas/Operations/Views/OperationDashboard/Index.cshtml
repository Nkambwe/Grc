            </div>
            <div class="stat-number" id="totalProcesses">
                <span>@procTotal</span>
            </div>
            <span class="stat-separator stat-separator-default"></span>
            <a class="stat-link" asp-controller="OperationDashboard" asp-action="Completed" asp-area="Operations">
                <span><i class="mdi mdi-chevron-right"></i></span>
                <span>@Html.Raw(ILocalize.GetLocalizedLabel("App.Menu.Dashboard.SeeMore"))</span>
            </a>
        </div>

