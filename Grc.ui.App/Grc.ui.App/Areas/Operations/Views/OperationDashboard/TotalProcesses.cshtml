@using System.Text.Json
@model TotalExtensionModel
@{
    Layout = "_OperationLayout";
    ViewData["Title"] = "TOTAL PROCESSES";

    var chartsJson = JsonSerializer.Serialize(Model.Charts);
}

<div class="welcome-container">
    <div class="welcome-container-message">
        <span class="display-1">@Model.WelcomeMessage</span>
    </div>
    <div class="incon-container-expand">
        <button id="expandBtn" type="button" class="icon-btn">
            <span>
                <i id="toggleIcon" class="mdi mdi-arrow-expand"></i>
            </span>
        </button>
    </div>

</div>

<div class="action-box">
    <div class="title-box">
        <h3 class="display-1 action-box-title">Quick Actions</h3>
        <span class="title-line"></span>
    </div>

    @await Component.InvokeAsync("QuickActions", new { model = Model.QuickActions })
</div>

<div class="dashboard-category-grid">
    <!-- Category total Cards -->
    <div class="stats-category-grid" id="categoryCards">
        <!-- Cards will be generated here -->
    </div>

    <!-- charts for each category -->
    <div class="category-charts-grid" id="categoryChartsContainer">
        <!-- Charts will be generated here -->
    </div>
</div>
@{
    Html.AddScriptParts(ResourceLocation.Footer, "~/js/operations-totals-dashboard-script.js");
}
<script>
    const chartData = @Html.Raw(chartsJson);
</script>
