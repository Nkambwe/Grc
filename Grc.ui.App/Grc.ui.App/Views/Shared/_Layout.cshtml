                                                <i class="mif-codescan"></i>
                                            </span>
                                            <span class="sidebar-text">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("App.Menu.Obligations.Audits"))
                                            </span>
                                        </a>
                                    </li>

                                    <li class="sidebar-item">
