@model PolicyRegisterViewModel

<div class="grc-tabulator-container">

    <div class="grc-tabulator-search">
        <div class="field-search-group">
            <label class="form-searchbox-label text-right">
                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Search.Policy-register"))</label>
            <input id="policySearchbox" type="text" class="form-control searchbox-field">
        </div>
        <div class="field-search-buttons">
            <button id="btnExportPolicy" class="btn btn-primary">
                <i class="mdi mdi-file-excel-outline"></i> @Html.Raw(ILocalize.GetLocalizedLabel("App.Label.ExportFiltered"))
            </button>
        </div>
    </div>
    <div id="regulatory-policy-register-table"></div>
</div>

<div id="policyOverlay" class="obligation-panel-overlay"></div>

<div id="slidePanel" class="obligation-side-panel" onclick="event.stopPropagation()">

    <div class="collapse-panel-header">
        <h3 id="panelTitle">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.PolRegister.Header"))</h3>
        <button class="panel-close" onclick="closePolicyPanel()">
            <i class="mdi mdi-close"></i>
        </button>
    </div>

    <div class="obligation-side-panel-body">

        <form id="recordForm" class="grc-form row g-3">
            <input type="hidden" id="recordId" name="recordId">
            <input type="hidden" id="isEdit" name="isEdit">

            <div id="lockSection" class="col-12">
                <div class="row mb-3 p-3">
                    <div class="col-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isLocked">
                            <label class="form-check-label" for="isLocked">
                                Lock document (This renders the document readonly)
                            </label>
                        </div>
                    </div>
                </div>
            </div>


            <!-- Detail Section -->
            <div class="col-12">

                <div id="detailSection" class="form-section">

                    <div class="section-header" onclick="toggleSection(this)">
                        <h5>@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Details"))</h5>
                        <span class="section-toggle">
                            <i class="mdi mdi-menu-down"></i>
                        </span>
                    </div>

                    <div class="section-content expanded">

                        <div class="section-body">

                            <div class="row g-3">

                                <div class="col-12">
                                    <!-- document Name -->
                                    <div class="row mb-3">
                                        <label for="documentName" class="col-sm-12 col-form-label text-sm-start">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Name"))
                                        </label>
                                        <div class="col-sm-12">
                                            <input type="text" id="documentName" name="documentName" class="form-control" required />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <!-- description -->
                                    <div class="row mb-3">
                                        <label for="comments" class="col-sm-12 col-form-label text-sm-start">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Description"))
                                        </label>
                                        <div class="col-sm-12">
                                            <textarea id="comments" name="comments" class="form-control" rows="3"></textarea>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-6">
                                    <div class="row mb-3">
                                        <label for="documentTypeId" class="col-sm-12 col-form-label text-sm-end">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Type"))
                                        </label>
                                        <div class="col-sm-12">
                                            <select class="js-act-document-type-id form-control" id="documentTypeId" name="documentTypeId">
                                                <option value="0">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Type"))</option>
                                                @if (Model?.RegulatoryTypes != null && Model.RegulatoryTypes.Any()) {
                                                    foreach (var type in Model.RegulatoryTypes) {
                                                        <option value="@type.Id">@type.TypeName</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-6">

                                    <div class="row mb-3">
                                        <label for="departmentId" class="col-sm-12 col-form-label text-sm-end">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Department"))
                                        </label>
                                        <div class="col-sm-12">
                                            <select class="js-act-departments form-control" id="departmentId" name="departmentId">
                                                <option value="0">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Department"))</option>
                                                @if (Model?.Departments != null && Model.Departments.Any()) {
                                                    foreach (var department in Model.Departments) {
                                                        <option value="@department.Id">@department.DepartmentName</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-6">

                                    <div class="row mb-3">
                                        <label for="ownerId" class="col-sm-12 col-form-label text-sm-end">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Responsible"))
                                        </label>
                                        <div class="col-sm-12">
                                            <select class="js-act-owner form-control" id="ownerId" name="ownerId">
                                                <option value="0">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Responsible.Select"))</option>
                                                @if (Model?.Responsibilities != null && Model.Responsibilities.Any()) {
                                                    foreach (var resposibility in Model.Responsibilities) {
                                                        <option value="@resposibility.Id">@resposibility.ResponsibleRole</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-sm-6 d-flex justify-content-end">
                                    <div class="form-check form-switch mt-2">
                                        <input class="form-check-input" type="checkbox" id="isDeleted" name="isDeleted">
                                        <label class="form-check-label" for="isDeleted">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Deactivate"))
                                        </label>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>

                </div>
            </div>

            <!-- Review Section -->
            <div class="col-12">

                <div id="reviewSection" class="form-section">

                    <div class="section-header" onclick="toggleSection(this)">
                        <h5>@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Review"))</h5>
                        <span class="section-toggle">
                            <i class="mdi mdi-menu-down"></i>
                        </span>
                    </div>

                    <div class="section-content">

                        <div class="section-body">

                            <div class="row mb-3">

                                <!-- Last review Date -->
                                <div class="col-6">
                                    <div class="row mb-3">
                                        <label for="lastReviewDate" class="col-sm-12 col-form-label">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Task.LastDate"))
                                        </label>
                                        <div class="col-sm-12">
                                            <input type="text" id="lastReviewDate" name="lastReviewDate" class="form-control datepicker" placeholder="MM/DD/YYYY" />
                                        </div>
                                    </div>
                                </div>

                                <!-- Next review Date -->
                                <div class="col-6">
                                    <div class="row mb-3">
                                        <label for="nextReviewDate" class="col-sm-12 col-form-label">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Task.NextDate"))
                                        </label>
                                        <div class="col-sm-12">
                                            <input type="text" id="nextReviewDate" name="nextReviewDate" class="form-control datepicker" placeholder="MM/DD/YYYY" />
                                        </div>
                                    </div>
                                </div>

                                <!-- Frequency -->
                                <div class="col-6">
                                    <div class="row mb-3">
                                        <label for="frequencyId" class="col-sm-12 col-form-label">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Frequency"))
                                        </label>
                                        <div class="col-sm-12">
                                            <select class="js-act-frequency form-control" id="frequencyId" name="frequencyId">
                                                <option value="UNKNOWN">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Placeholder"))</option>
                                                @if (Model?.Frequencies != null && Model.Frequencies.Any()) {
                                                    foreach (var frequency in Model.Frequencies) {
                                                        <option value="@frequency.Id">@frequency.FrequencyName</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!-- Review Status -->
                                <div class="col-6">

                                    <div class="row mb-3">
                                        <label for="documentStatus" class="col-sm-12 col-form-label">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Procedure.Status"))
                                        </label>
                                        <div class="col-sm-12">
                                            <select class="js-act-status form-control" id="documentStatus" name="documentStatus">
                                                <option value="NONE">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Status"))</option>
                                                <option value="NA">Not Applicable</option>
                                                <option value="ON-HOLD">On hold</option>
                                                <option value="PENDING-BOARD">Pending Board Signoff</option>
                                                <option value="PENDING-MCR">Pending MCR</option>
                                                <option value="PENDING-SMT">Pending SMT Signoff</option>
                                                <option value="DEPT-REVIEW">Department Review</option>
                                                <option value="DUE">Due For Review</option>
                                                <option value="UPTODATE">Uptodate</option>
                                                
                                            </select>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

            </div>

            <!-- Approval Section -->
            <div class="col-12">

                <div id="approvalSection" class="form-section">

                    <div class="section-header" onclick="toggleSection(this)">
                        <h5>@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Approval"))</h5>
                        <span class="section-toggle">
                            <i class="mdi mdi-menu-down"></i>
                        </span>
                    </div>

                    <div class="section-content">

                        <div class="section-body">

                            <div class="row mb-3">

                                <div id="alignedCheck" class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="isAligned">
                                        <label class="form-check-label" for="isAligned">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Aligned"))
                                        </label>
                                    </div>
                                </div>

                                <div id="boardCheck" class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="needBoardApproval">
                                        <label class="form-check-label" for="needBoardApproval">
                                            Need Board Approval
                                        </label>
                                    </div>
                                </div>

                                <div id="mcrCheck" class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="needMcrApproval">
                                        <label class="form-check-label" for="needMcrApproval">
                                            Need MCR Approval
                                        </label>
                                    </div>
                                </div>

                                <div id="intranetCheck" class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="onIntranet">
                                        <label class="form-check-label" for="onIntranet">
                                            Need MCR Approval
                                        </label>
                                    </div>
                                </div>

                                <!-- Approval Status -->
                                <div class="col-6">

                                    <div class="row mb-3">
                                        <label for="isApproved" class="col-sm-12 col-form-label">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Procedure.IsApproved"))
                                        </label>
                                        <div class="col-sm-12">
                                            <select class="js-act-is-approved form-control" id="isApproved" name="isApproved">
                                                <option value="0">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Approval"))</option>
                                                <option value="1">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Yes"))</option>
                                                <option value="2">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.No"))</option>
                                            </select>
                                        </div>
                                    </div>

                                </div>

                                <!-- Approval Date -->
                                <div class="col-6">
                                    <div class="row mb-3">
                                        <label for="approvalDate" class="col-sm-12 col-form-label">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.ApprovalDate"))
                                        </label>
                                        <div class="col-sm-12">
                                            <input type="text" id="approvalDate" name="approvalDate" class="form-control datepicker" placeholder="MM/DD/YYYY" />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-6">

                                    <div class="row mb-3">
                                        <label for="approver" class="col-sm-12 col-form-label">
                                            @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.ApprovedBy"))
                                        </label>
                                        <div class="col-sm-12">
                                            <select class="js-act-approval-by form-control" id="approver" name="approver">
                                                <option value="NONE">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.ApprovedBy.Select"))</option>
                                                <option value="BOARD">Board Approval</option>
                                                <option value="MRC">MCR Approval</option>
                                                <option value="SMT">SMT Approval</option>
                                            </select>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>

                </div>

            </div>

            <!-- Reminder Section -->
            <div class="col-12">

                <div id="reminderSection" class="form-section">

                    <div class="section-header" onclick="toggleSection(this)">
                        <h5>@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Notification"))</h5>
                        <span class="section-toggle">
                            <i class="mdi mdi-menu-down"></i>
                        </span>
                    </div>

                    <div class="section-content">

                        <div class="section-body">

                            <div class="row mb-3">

                                <div class="row mb-3">

                                    <div class="col-sm-7">
                                        <div class="row mb-3">
                                            <label for="interval" class="col-5 form-label mt-3">
                                                Send Reiminders every
                                            </label>
                                            <div class="col-7 mt-2">
                                                <input type="text" id="interval" name="interval" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-5">
                                        <div class="row mb-3">
                                            <div class="col-12">
                                                <select class="js-interval-type-id form-control" id="intervalType" name="intervalType">
                                                    <option value="NA">Select reminder interval...</option>
                                                    <option value="HOURS">Hour(s)</option>
                                                    <option value="DAYS">Day(s)</option>
                                                    <option value="WEEKS">Week(s)</option>
                                                    <option value="MONTHS">Month(s)</option>
                                                    <option value="YEARS">Year(s)</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">

                                    <label for="reminderMessage" class="col-12 form-label mb-3">
                                        @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Audits.Update.Label.Reminder"))
                                    </label>
                                    <div class="col-12">
                                        <textarea class="form-control" id="reminderMessage" name="reminderMessage" rows="2"></textarea>
                                    </div>

                                </div>
                            </div>

                        </div>

                    </div>

                </div>

            </div>

            <div class="col-sm-12 p-4">
                <div class="row mb-3">
                    <div class="col-sm-2">
                        <button class="btn btn-grc-primary" style="width:100%;" onclick="savePolicyDocument()">Save</button>
                    </div>
                    <div class="col-sm-2">
                        <button class="btn btn-grc-secondary" style="width:100%;" onclick="closePolicyPanel()">Cancle</button>
                    </div>
                    <div class="col-sm-8"></div>
                </div>
            </div>

        </form>

    </div>

</div>

@{
    Html.AddScriptParts(ResourceLocation.Footer, "~/lib/jquery/dist/jquery.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/js/app-regulation-PolRegister.js");
}
