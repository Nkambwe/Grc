@model PolicyRegisterViewModel

<div class="grc-tabulator-container">
    <div class="grc-tabulator-search">
        <div class="field-search-group">
            <label class="form-searchbox-label text-right">
                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Search.Acts"))
            </label>
            <input id="taskSearchbox" type="text" class="form-control searchbox-field">
        </div>
        <div class="field-search-buttons">
            <button id="btnPolicyTaskExportFiltered" class="btn btn-primary">
                <i class="mdi mdi-file-excel-outline"></i> @Html.Raw(ILocalize.GetLocalizedLabel("App.Label.ExportFiltered"))
            </button>
        </div>
    </div>
    <div id="registers-table"></div>

</div>

<!-- Overlay -->
<div class="overlay" onclick="closeActPanel()">

    <!-- Slide Panel -->
    <div id="slidePanel" class="collapse-panel" onclick="event.stopPropagation()">

        <div class="collapse-panel-header">
            <h3 id="panelTitle">Record Details</h3>
            <button class="panel-close" onclick="closeActPanel()">&times;</button>
        </div>

        <div class="collapse-panel-body">

            <form id="actForm" class="grc-form row g-3">
                <input type="hidden" id="recordId">
                <input type="hidden" id="isEdit">

                <!-- Detail Section -->
                <div class="col-12">

                    <div id="detailSection" class="form-section">

                        <div class="section-header" onclick="toggleSection(this)">
                            <h5>@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Details"))</h5>
                            <span class="section-toggle">
                                <i class="mdi mdi-menu-down"></i>
                            </span>
                        </div>

                        <div class="section-content expanded">

                            <div class="section-body">

                                <div class="row g-3">

                                    <div class="col-12">
                                        <!-- regulatory Name -->
                                        <div class="row mb-3">
                                            <label for="regulatoryName" class="col-sm-12 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Procedure.Name"))
                                            </label>
                                            <div class="col-sm-12">
                                                <input type="text" id="regulatoryName" name="regulatoryName" class="form-control" required />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <!-- description -->
                                        <div class="row mb-3">
                                            <label for="actComments" class="col-sm-12 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Procedure.Description"))
                                            </label>
                                            <div class="col-sm-12">
                                                <textarea id="actComments" name="actComments" class="form-control" rows="3"></textarea>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-6">
                                        <div class="row mb-3">
                                            <label for="dpAuthority" class="col-sm-4 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Procedure.Type"))
                                            </label>
                                            <div class="col-sm-8">
                                                <select class="js-act-authority form-control" id="dpAuthority" name="dpAuthority">
                                                    <option value="0">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Type"))</option>
                                                    @if (Model?.RegulatoryTypes != null && Model.RegulatoryTypes.Any()) {
                                                        foreach (var type in Model.RegulatoryTypes) {
                                                            <option value="@type.Id">@type.TypeName</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-6">
                                        <div class="row mb-3">
                                            <label for="dpAuthority" class="col-sm-4 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Procedure.Authority"))
                                            </label>
                                            <div class="col-sm-8">
                                                <select class="js-act-authority form-control" id="dpAuthority" name="dpAuthority">
                                                    <option value="0">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Select.Authority"))</option>
                                                    @if (Model?.Authorities != null && Model.Authorities.Any()) {
                                                        foreach (var authority in Model.Authorities) {
                                                            <option value="@authority.Id">@authority.AuthorityName</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-6">

                                        <div class="row mb-3">
                                            <label for="dpDepartments" class="col-sm-4 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Procedure.Department"))
                                            </label>
                                            <div class="col-sm-8">
                                                <select class="js-act-departments form-control" id="dpDepartments" name="dpDepartments">
                                                    <option value="0">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Department"))</option>
                                                    @if (Model?.Departments != null && Model.Departments.Any()) {
                                                        foreach (var department in Model.Departments) {
                                                            <option value="@department.Id">@department.DepartmentName</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="col-6">

                                        <div class="row mb-3">
                                            <label for="dpResponsibility" class="col-sm-4 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Procedure.Responsible"))
                                            </label>
                                            <div class="col-sm-8">
                                                <select class="js-act-respons form-control" id="dpResponsibility" name="dpResponsibility">
                                                    <option value="0">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Responsible"))</option>
                                                    @if (Model?.Responsibilities != null && Model.Responsibilities.Any()) {
                                                        foreach (var resposibility in Model.Responsibilities) {
                                                            <option value="@resposibility.Id">@resposibility.ResponsibleRole</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>
                </div>

                <!-- Review Section -->
                <div class="col-12">

                    <div id="reviewSection" class="form-section">

                        <div class="section-header" onclick="toggleSection(this)">
                            <h5>@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Review"))</h5>
                            <span class="section-toggle">
                                <i class="mdi mdi-menu-down"></i>
                            </span>
                        </div>

                        <div class="section-content">

                            <div class="section-body">

                                <div class="row mb-3">

                                    <!-- Last review Date -->
                                    <div class="col-6">
                                        <div class="row mb-3">
                                            <label for="lastReviewDate" class="col-sm-4 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Task.LastDate"))
                                            </label>
                                            <div class="col-sm-8">
                                                <input type="text" id="lastReviewDate" name="lastReviewDate" class="form-control datepicker" placeholder="MM/DD/YYYY" />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Next review Date -->
                                    <div class="col-6">
                                        <div class="row mb-3">
                                            <label for="nextReviewDate" class="col-sm-4 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Task.NextDate"))
                                            </label>
                                            <div class="col-sm-8">
                                                <input type="text" id="nextReviewDate" name="nextReviewDate" class="form-control datepicker" placeholder="MM/DD/YYYY" />
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Frequency -->
                                    <div class="col-6">
                                        <div class="row mb-3">
                                            <label for="dpFrequency" class="col-sm-4 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Frequency"))
                                            </label>
                                            <div class="col-sm-8">
                                                <select class="js-act-frequency form-control" id="dpFrequency" name="dpFrequency">
                                                    <option value="UNKNOWN">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Placeholder"))</option>
                                                    @if (Model?.Frequencies != null && Model.Frequencies.Any()) {
                                                        foreach (var frequency in Model.Frequencies) {
                                                            <option value="@frequency.Id">@frequency.FrequencyName</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Review Status -->
                                    <div class="col-6">

                                        <div class="row mb-3">
                                            <label for="dpStatus" class="col-sm-4 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Procedure.Status"))
                                            </label>
                                            <div class="col-sm-8">
                                                <select class="js-act-status form-control" id="dpStatus" name="dpStatus">
                                                    <option value="NONE">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Status"))</option>
                                                    <option value="NA">Not Applicable</option>
                                                    <option value="ON-HOLD">On hold</option>
                                                    <option value="PENDING-BOARD">Pending Board Signoff</option>
                                                    <option value="PENDING-SMT">Pending SMT Signoff</option>
                                                    <option value="DEPT-REVIEW">Department Review</option>
                                                    <option value="DUE">Due For Review</option>
                                                    <option value="UPTODATE">Uptodate</option>
                                                </select>
                                            </div>
                                        </div>

                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

                <!-- Approval Section -->
                <div class="col-12">

                    <div id="approvalSection" class="form-section">

                        <div class="section-header" onclick="toggleSection(this)">
                            <h5>@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Review"))</h5>
                            <span class="section-toggle">
                                <i class="mdi mdi-menu-down"></i>
                            </span>
                        </div>

                        <div class="section-content">

                            <div class="section-body">

                                <div class="row mb-3">

                                    <div id="alignedCheck" class="col-6">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="isAligned">
                                            <label class="form-check-label" for="isAligned">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Aligned"))
                                            </label>
                                        </div>
                                    </div>

                                    <!-- Approval Status -->
                                    <div class="col-6">

                                        <div class="row mb-3">
                                            <label for="dpApproved" class="col-sm-4 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Procedure.IsApproved"))
                                            </label>
                                            <div class="col-sm-8">
                                                <select class="js-act-approval form-control" id="dpApproved" name="dpApproved">
                                                    <option value="UNKNOWN">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Approval"))</option>
                                                    <option value="1">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.Yes"))</option>
                                                    <option value="0">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.Select.No"))</option>
                                                </select>
                                            </div>
                                        </div>

                                    </div>

                                    <!-- Approval Date -->
                                    <div class="col-6">
                                        <div class="row mb-3">
                                            <label for="approvalDate" class="col-sm-4 col-form-label text-sm-end">
                                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Policy.ApprovalDate"))
                                            </label>
                                            <div class="col-sm-8">
                                                <input type="text" id="approvalDate" name="approvalDate" class="form-control datepicker" placeholder="MM/DD/YYYY" />
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>

                        </div>

                    </div>

                </div>

                <div class="col-sm-12">
                    <div class="row mb-3">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-1">
                            <button class="btn btn-grc-primary" style="width:100%;" onclick="saveActRecord(event)">Save</button>
                        </div>
                        <div class="col-sm-1">
                            <button class="btn btn-grc-secondary" style="width:100%;" onclick="closeActPanel()">Cancel</button>
                        </div>
                        <div class="col-sm-8"></div>
                    </div>
                </div>

            </form>

        </div>

    </div>
</div>

@{
    Html.AddScriptParts(ResourceLocation.Footer, "~/lib/jquery/dist/jquery.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/js/app-regulations-register.js");
}