@model PopupModel
@{
    var content = Model.PageContent;
    var popupId = $"{Model.ComponentName}";

    // shrink nested modals slightly
    var offset = Model.PageLavel * 20;
}

<div id="@popupId" class="component-modal-overlay" 
    data-popup-id="@popupId" 
    data-level="@Model.PageLavel"
    data-popup-name="@Model.ComponentName"
     style="padding:@offset; z-index:@(1000 + Model.PageLavel * 10)">
    <div class="component-modal-container" style="margin:@offset;">
        <div class="component-modal-header">
            <button type="button" class="componet-modal-back" title='@Html.Raw(ILocalize.GetLocalizedLabel("Component.Label.Back"))'>
                <span><i class="mdi mdi-arrow-left"></i></span>
            </button>
            <div id="componentModalTitle" class="component-modal-title">
                <span>@Model.PageTitle</span>
            </div>
            <div class="button-box">
                <button id="componetExpandBtn" data-action="expand" class="icon-btn comp-expand-btn" title='@Html.Raw(ILocalize.GetLocalizedLabel("Component.Label.FullScreen"))'>
                    <span><i id="componentExpandIncon" class="mdi mdi-arrow-expand"></i></span>
                </button>
                <button type="button" class="component-modal-close" title='@Html.Raw(ILocalize.GetLocalizedLabel("Component.Label.Close"))'>
                    <span><i class="mdi mdi-close"></i></span>
                </button>
            </div>
        </div>
        <div id="componentodalContent" class="component-modal-content">
            @content
        </div>
    </div>
</div>

