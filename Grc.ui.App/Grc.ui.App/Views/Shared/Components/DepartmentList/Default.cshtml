<div class="dashboard-category-grid" style="display:flex; min-height:85vh;">
    <div class="inner-dashboard-container" style="flex:1; display:flex; flex-direction:column;">
        <div id="depatTable" style="flex:1;"></div>
    </div>
</div>

<div id="deptOverLay" class="obligation-panel-overlay"></div>

<div id="deptContainer" class="obligation-side-panel" onclick="event.stopPropagation()">

    <div class="obligation-side-panel-header">
        <h3 id="deptTitle">Department</h3>
        <button class="panel-close" onclick="closeDepartmentPanel()">
            <i class="mdi mdi-close"></i>
        </button>
    </div>

    <div id="departmentPanel" class="obligation-side-panel-body">

        <form id="departmentForm" class="grc-law-form m-5">
            <input type="hidden" id="departmentId">
            <input type="hidden" id="isEdit">

            <div class="row">

                <div class="col-12 m-2">
                    <label for="departmentCode" class="col-12 form-label">DEPERTMENT CODE</label>
                </div>

                <div class="col-12 m-2">
                    <input type="text" class="form-control" id="departmentCode" name="solId">
                </div>

            </div>

            <div class="row">

                <div class="col-12 m-2">
                    <label for="departmentAlias" class="col-12 form-label">DEPERTMENT ALIA</label>
                </div>

                <div class="col-12 m-2">
                    <input type="text" class="form-control" id="departmentAlias" name="departmentAlias">
                </div>

            </div>

            <div class="row">

                <div class="col-12 m-2">
                    <label for="departmentName" class="col-12 form-label">DEPERTMENT NAME</label>
                </div>

                <div class="col-12 m-2">
                    <input type="text" class="form-control" id="departmentName" name="departmentName">
                </div>

            </div>

            <div id="unitListSection" class="unit-list-section">
                <div class="unit-list-header">
                    <h5 class="unit-list-title">Department Units</h5>
                    <button type="button" class="btn btn-primary btn-sm" onclick="addNewUnit()">
                        <i class="mdi mdi-plus"></i> Add Unit
                    </button>
                </div>
                <div id="unitListTable">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>UNIT CODE</th>
                                <th>UNIT NAME</th>
                                <th class="text-center">ACTION</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-5">

                <div class="col-12">
                    <div class="row mb-3">
                        <div class="col-2">
                            <button class="btn btn-grc-primary" style="width:100%;" onclick="saveDepartment(event)">@Html.Raw(ILocalize.GetLocalizedLabel("Button.Submit"))</button>
                        </div>
                        <div class="col-2">
                            <button class="btn btn-grc-secondary" style="width:100%;" onclick="closeDepartmentPanel()">@Html.Raw(ILocalize.GetLocalizedLabel("Button.Cancel"))</button>
                        </div>
                        <div class="col-8"></div>
                    </div>
                </div>

            </div>

        </form>

    </div>
</div>
