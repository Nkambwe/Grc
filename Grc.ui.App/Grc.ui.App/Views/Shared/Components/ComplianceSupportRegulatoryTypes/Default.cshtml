<div class="grc-tabulator-container">

    <div class="grc-tabulator-search">
        <div class="field-search-group">
            <label class="form-searchbox-label text-right">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Search.Types"))</label>
            <input id="typeSearchbox" type="text" class="form-control searchbox-field">
        </div>
    </div>
    <div id="regulatory-types-table"></div>
</div>

<!-- Overlay -->
<div id="rtOverlay" class="obligation-panel-overlay" onclick="closeRegulatoryTypePanel()"></div>

<!-- Slide Panel -->
<div id="slidePanel" class="obligation-side-panel" onclick="event.stopPropagation()">

    <div class="panel-header">
        <h3 id="panelTitle">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Type.Header"))</h3>
        <button class="panel-close" onclick="closeRegulatoryTypePanel()">
            <i class="mdi mdi-close"></i>
        </button>
    </div>

    <div class="obligation-side-panel-body">

        <form id="recordForm" class="grc-form row g-3">
            <input type="hidden" id="recordId">
            <input type="hidden" id="isEdit">

            <div class="col-sm-12">
                <div class="row field-group">
                    <label for="typeName" class="form-label text-right col-12">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Type.Header"))</label>
                    <input type="text" id="typeName" name="typeName" class="col-12 form-control" required>
                </div>
            </div>

            <div class="col-sm-6">
                <div class="row field-group">
                    <div id="isActive" class="col-6">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="isActive">
                            <label class="form-check-label" for="isActive">
                                @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Status.Active"))
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-12">
                <div class="row mb-3">
                    <div class="col-sm-1">
                        <button class="btn btn-grc-primary" style="width:100%;" onclick="saveRegulatoryTypeRecord(event)">@Html.Raw(ILocalize.GetLocalizedLabel("Button.Submit"))</button>
                    </div>
                    <div class="col-sm-1">
                        <button class="btn btn-grc-secondary" style="width:100%;" onclick="closeRegulatoryTypePanel()">@Html.Raw(ILocalize.GetLocalizedLabel("Button.Cancel"))</button>
                    </div>
                    <div class="col-sm-10"></div>
                </div>
            </div>

        </form>
    </div>
</div>

@{
    Html.AddScriptParts(ResourceLocation.Footer, "~/lib/jquery/dist/jquery.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/js/app-regulation-types.js");
}

