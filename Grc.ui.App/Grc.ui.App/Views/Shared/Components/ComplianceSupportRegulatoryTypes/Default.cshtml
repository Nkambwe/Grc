<div class="grc-tabulator-container">

    <div class="grc-tabulator-search">
        <div class="field-search-group">
            <label class="form-searchbox-label text-right">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Search.Types"))</label>
            <input id="typeSearchbox" type="text" class="form-control searchbox-field">
        </div>
    </div>
    <div id="regulatory-types-table"></div>
</div>

<!-- Overlay -->
<div class="overlay" onclick="closeRegulatoryTypePanel()">

    <!-- Slide Panel -->
    <div id="slidePanel" class="slide-panel" onclick="event.stopPropagation()">
        <div class="panel-header">
            <h3 id="panelTitle">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Type.Header"))</h3>
            <button class="panel-close" onclick="closeRegulatoryTypePanel()">
                <i class="mdi mdi-close"></i>
            </button>
        </div>
        <div class="panel-body">
            <form id="recordForm">
                <input type="hidden" id="recordId">
                <input type="hidden" id="isEdit">

                <div class="field-group">
                    <label for="typeName" class="form-label text-right">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Type.Header"))</label>
                    <input type="text" id="typeName" name="typeName" class="form-control" required>
                </div>

                <div class="field-group">
                    <label for="dpTypeStatus" class="form-label text-right select2-field select2-column">
                        @Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Type.Status"))
                        <select class="js-record-type form-control" id="dpTypeStatus" name="dpTypeStatus" aria-labelledby="dpTypeStatus-label" aria-describedby="dpTypeStatus-description">
                            <option value="">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Type.Select"))</option>
                            <option value="Active">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Type.Active"))</option>
                            <option value="Inactive">@Html.Raw(ILocalize.GetLocalizedLabel("Component.Table.Type.InActive"))</option>
                        </select>
                        <span id="dpTypeStatus-description" class="sr-only">
                            @Html.Raw(ILocalize.GetLocalizedLabel("App.Label.srOnly.ArrowKeys"))
                        </span>
                    </label>

                </div>

            </form>
        </div>
        <div class="panel-footer">
            <button class="btn btn-secondary" onclick="closeRegulatoryTypePanel()">@Html.Raw(ILocalize.GetLocalizedLabel("Button.Cancel"))</button>
            <button class="btn btn-primary" onclick="saveRegulatoryTypeRecord()">@Html.Raw(ILocalize.GetLocalizedLabel("Button.Submit"))</button>
        </div>
    </div>
</div>

@{
    Html.AddScriptParts(ResourceLocation.Footer, "~/lib/jquery/dist/jquery.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/js/app-regulation-types.js");

}

