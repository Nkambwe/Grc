@model UserDashboardModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "NIRA CIRCULARS";
}

@{
    var component = new PageComponentViewModel
    {
        ComponentId = $"0",
        ComponentKey = "Circulars.Nira",
        LeftActions = new List<ComponentAction>
        {
            new ComponentAction { ActionKey = ActionKey.CircularHome.GetDescription(), Icon = "mdi mdi-home-outline", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Home") },
            new ComponentAction { ActionKey = ActionKey.Separator.GetDescription()},
            new ComponentAction { ActionKey = ActionKey.ExportToExcel.GetDescription(), Icon = "mdi mdi-file-excel-outline", Tooltip = ILocalize.GetLocalizedLabel("App.Label.Export") },
        }
    };
}

@await Component.InvokeAsync("BaseComponent", new { model = component, content = Component.InvokeAsync("NiraCirculars") })