@model ConfigurationModel
@{
    var generalConfi = Model.GeneralSettings;
    var policyConfi = Model.PolicySettings;
    var auditConfi = Model.AuditSettings;
    var obliConfi = Model.ObligationSettings;
    var mappingConfi = Model.MappingSettings;
    var securityConfi = Model.SecuritySettings;
}
<div class="settings-page">
    <!-- Left Tabs -->
    <div class="settings-tabs">
        <button class="tab active" data-tab="general">General Settings</button>
        <button class="tab" data-tab="policies">Policies & Procedures</button>
        <button class="tab" data-tab="obligations">Obligations</button>
        <button class="tab" data-tab="mapping">Compliance Mapping</button>
        <button class="tab" data-tab="audits">Compliance Audits</button>
        <button class="tab" data-tab="security">System Security</button>
    </div>

    <!-- Right Content -->
    <div class="settings-content">

        <div class="tab-content configuration-content active" id="general">

            <div class="tab-header">
                <h2>General Settings</h2>

                <div class="settings-header-actions">
                    <span class="dirty-indicator">Unsaved changes</span>
                    <button class="btn btn-sm btn-primary save-settings-btn">
                        Save Changes
                    </button>
                </div>
            </div>

            <div class="tab-content-area">
                <div class="row g-4">

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Soft Delete Records</h6>
                                <p>Marks records as deleted without removing them.</p>
                            </div>
                            <div class="settings-control">
                                <div class="form-check form-switch">
                                    <input class="form-check-input setting-input"
                                           type="checkbox"
                                           id="softDelete"
                                           asp-for="@generalConfi.SoftDeleteRecord" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Include Deleted Records</h6>
                                <p>Retrieve soft deleted records.</p>
                            </div>
                            <div class="settings-control">
                                <div class="form-check form-switch">
                                    <input class="form-check-input setting-input"
                                           type="checkbox"
                                           id="includeDeleted"
                                           asp-for="@generalConfi.IncludeDeletedRecords" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="tab-content configuration-content" id="policies">

            <div class="tab-header">
                <h2>Policies & Procedures</h2>

                <div class="settings-header-actions">
                    <span class="dirty-indicator">Unsaved changes</span>
                    <button class="btn btn-sm btn-primary save-settings-btn">
                        Save Changes
                    </button>
                </div>
            </div>

            <div class="tab-content-area">
                <div class="row g-4">

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Send Notifications</h6>
                                <p>Notify users about policy changes.</p>
                            </div>
                            <div class="settings-control">
                                <div class="form-check form-switch">
                                    <input asp-for="@policyConfi.SendNotifications" class="form-check-input setting-input" type="checkbox" id="policySendNotifications" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Maximum Notifications</h6>
                                <p>Maximum notifications per day.</p>
                            </div>
                            <div class="settings-control">
                                <input asp-for="@(policyConfi.MaximumNotifications)" class="form-control setting-input" type="number" id="policyMaxNotifications" min="1" max="100" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="tab-content configuration-content" id="obligations">

            <h2>Return Obligations</h2>

            <div id="saveBar" class="save-bar">
                <span>You have unsaved changes</span>
                <button class="btn btn-primary btn-sm">Save Changes</button>
            </div>

            <div class="tab-content-area">

                <div class="row g-4">

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Send Notifications</h6>
                                <p>Enable system notifications for obligations events</p>
                            </div>
                            <div class="settings-control">
                                <div class="form-check form-switch">
                                    <input asp-for="@obliConfi.SendNotifications" class="form-check-input setting-input" type="checkbox" id="obliSendNotifications" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Maximum Notifications</h6>
                                <p>Maximum number of notifications per day.</p>
                            </div>
                            <div class="settings-control">
                                <input asp-for="@obliConfi.MaximumNotifications" id="obliMaximumNotifications" class="form-control setting-input" type="number" min="1" max="100" />
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

        <div class="tab-content configuration-content" id="mapping">

            <div class="tab-header">
                <h2>Compliance Mapping</h2>

                <div id="saveBar" class="save-bar">
                    <span>You have unsaved changes</span>
                    <button class="btn btn-primary btn-sm">Save Changes</button>
                </div>
            </div>

            <div class="tab-content-area">

                <div class="row g-4">

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Allow user add mapping controls</h6>
                                <p>Allow system users to add and map compliance obligations to controls</p>
                            </div>
                            <div class="settings-control">
                                <div class="form-check form-switch">
                                    <input asp-for="@mappingConfi.UsersCanAddComplianceControls" class="form-check-input setting-input" type="checkbox" id="allowControlMapping" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Limit control items</h6>
                                <p>Enable system to limit the number of items that a mapping control can have</p>
                            </div>
                            <div class="settings-control">
                                <div class="form-check form-switch">
                                    <input asp-for="@mappingConfi.LimitNumberOfItemsOnControl" class="form-check-input setting-input" type="checkbox" id="limitControlItems" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Maximum Items Per Control</h6>
                                <p>Limit the number of items that a control can have </p>
                            </div>
                            <div class="settings-control">
                                <input asp-for="@mappingConfi.MaximumNumberOfItemsOnControl" class="form-control setting-input" type="number" min="1" max="100" id="maximuItemsOnControl" />
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

        <div class="tab-content configuration-content" id="audits">

            <div class="tab-header">
                <h2>Compliance Audits</h2>

                <div id="saveBar" class="save-bar">
                    <span>You have unsaved changes</span>
                    <button class="btn btn-primary btn-sm">Save Changes</button>
                </div>
            </div>

            <div class="tab-content-area">

                <div class="row g-4">

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Send Notifications</h6>
                                <p>Enable system notifications for audit events.</p>
                            </div>
                            <div class="settings-control">
                                <div class="form-check form-switch">
                                    <input asp-for="@mappingConfi.LimitNumberOfItemsOnControl" class="form-check-input setting-input" type="checkbox" id="auditSendNotifications" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Maximum Notifications</h6>
                                <p>Maximum number of notifications per day.</p>
                            </div>
                            <div class="settings-control">
                                <input asp-for="@auditConfi.MaximumNotifications" class="form-control setting-input" type="number" min="1" max="100" id="auditMaximumNotifications" />
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

        <div class="tab-content configuration-content" id="security">

            <div class="tab-header">

                <h2>System Security and Data encription</h2>

                <div id="saveBar" class="save-bar">
                    <span>You have unsaved changes</span>
                    <button class="btn btn-primary btn-sm">Save Changes</button>
                </div>

            </div>

            <div class="tab-content-area">

                <div class="row g-4">

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>User password should expire</h6>
                                <p>Force users to periodically change their password by limiting usage period.</p>
                            </div>
                            <div class="settings-control">
                                <div class="form-check form-switch">
                                    <input asp-for="@securityConfi.ExpirePassword" class="form-check-input setting-input" type="checkbox" id="expirePassword" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Password usage period (In Days)</h6>
                                <p>Set the number of days a user can use the same password</p>
                            </div>
                            <div class="settings-control">
                                <input asp-for="@securityConfi.ExipreyPeriod" class="form-control setting-input" type="number" min="1" max="100" id="exipreyPeriod" />
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Allow users to use an old password</h6>
                                <p>System allows users to set a once used password again</p>
                            </div>
                            <div class="settings-control">
                                <div class="form-check form-switch">
                                    <input asp-for="@securityConfi.CanUseOldPassword" class="form-check-input setting-input" type="checkbox" id="allowPasswordReuse" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-12 m-2">
                        <div class="settings-card">
                            <div class="settings-info">
                                <h6>Allow manual password reset</h6>
                                <p>Allow system administrators to set new password for users</p>
                            </div>
                            <div class="settings-control">
                                <div class="form-check form-switch">
                                    <input asp-for="@securityConfi.AllowAdmininsToResetPasswords" class="form-check-input setting-input" type="checkbox" id="allowAdminPasswordReset" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

        </div>

    </div>
</div>

@{
    Html.AddScriptParts(ResourceLocation.Footer, "~/lib/jquery/dist/jquery.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/js/compliance-settings.js");
}
