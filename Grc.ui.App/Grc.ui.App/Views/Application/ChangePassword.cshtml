@model PasswordChangeModel
@{
    var dataJson = JsonSerializer.Serialize(Model);
}

<div class="password-change-container">

    <div class="password-change-container-Header">
        <div class="back-container">
            <button type="button" class="action-btn-home">
                <span><i class="mdi mdi-home-outline"></i></span>
            </button>
        </div>
        <div class="back-container-header">
            <h4 class="password-header-label">@Model.WelcomeMessage</h4>
        </div>
    </div>

    <form id="pwdForm" class="password-form">
        <input type="hidden" id="validated-password-change" name="validatePasswordChane">
        <input type="hidden" id="userId" value="@Model.UserId">
        <input type="hidden" id="username" value="@Model.Username">

        <div class="form-group">
            <input type="password"
                   id="oldPassword"
                   name="oldPassword"
                   class="form-control" required>
            <label for="oldPassword" class="grc-form-label">Current Password</label>
            <i class="mdi mdi-eye password-toggle" id="toggle-old-password"></i>
            <div id="old-password-change-error" class="error-message"></div>
        </div>

        <div class="form-group">
            <input type="password"
                   id="newPassword"
                   name="newPassword"
                   class="form-control" required>
            <label for="newPassword" class="grc-form-label">New Password</label>
            <i class="mdi mdi-eye password-toggle" id="toggle-new-password"></i>
            <div id="new-password-change-error" class="error-message"></div>
        </div>

        <div class="form-group">
            <input type="password"
                   id="confirmPassword"
                   name="confirmPassword"
                   class="form-control" required>
            <label for="confirmPassword" class="grc-form-label">Confirm Password</label>
            <i class="mdi mdi-eye password-toggle" id="toggle-confirm-password"></i>
            <div id="confirm-password-change-error" class="error-message"></div>
        </div>

        <div class="password-requirements mb-3">
            <small class="text-muted">Password must contain:</small>
            <ul class="small text-muted" id="password-requirements"></ul>
        </div>
        <div id="password-strength-indicator" class="mb-2"></div>

        <button id="btnChange" type="button" class="btn btn-primary" style="width:200px;">
            Change Password
        </button>

    </form>

</div>

@{
    Html.AddScriptParts(ResourceLocation.Footer, "~/lib/jquery/dist/jquery.js");
    Html.AddScriptParts(ResourceLocation.Footer, "~/js/app-admin-passwords.js");
}

<script>
    const settings = @Html.Raw(dataJson);
</script>