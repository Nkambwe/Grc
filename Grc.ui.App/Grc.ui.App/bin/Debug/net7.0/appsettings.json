{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnvironmentOptions": {
    "IsLive": false
  },
  "LoggingOptions": {
    "DefaultLogName": "app_ui",
    "LogFolder": "grc_appui"
  },
  "MiddlewareOptions": {
    "BaseUrl": "https://localhost:7245/grc/",
    "AppSessionTime": 45,
    "IdleSessionTime": 30
  },
  "EndpointTypeOptions": {
    "Sam": {
      "Login": "sam/login",
      "Logout": "sam/logout",
      "Users": "sam/users",
      "Roles": "sam/roles",
      "RoleGroups": "sam/role_groups",
      "Permissions": "sam/permissions",
      "PermissionSets": "sam/permission_sets",
      "Policies": "sam/policies"
    },
    "Health": {
      "Loading": "health/loading",
      "Status": "health/checkstatus"
    },
    "LanguageOptions": {
      "DefaultCulture": "en",
      "SupportedCultures": [ "en", "am", "fr", "de" ]
    }
  }
}
