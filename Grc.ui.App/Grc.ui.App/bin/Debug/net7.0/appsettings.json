{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "EnvironmentOptions": {
    "IsLive": false
  },
  "LoggingOptions": {
    "DefaultLogName": "app_ui",
    "LogFolder": "grc_appui"
  },
  "MiddlewareOptions": {
    "BaseUrl": "https://localhost:7245/grc/",
    "ProdBaseUrl": "https://10.192.2.15:8080/grc/",
    "AppSessionTime": 45,
    "IdleSessionTime": 30
  },
  "EndpointTypeOptions": {
    "Sam": {
      "Sambase": "sam",
      "Users": "sam/users",
      "Roles": "sam/roles",
      "RoleGroups": "sam/role_groups",
      "Permissions": "sam/permissions",
      "Policies": "sam/policies"
    },
    "Health": {
      "Loading": "health/loading",
      "Status": "health/checkstatus"
    },
    "Registration": {
      "Register": "registration/register"
    },
    "organization": {
      "AllBranches": "organization/allBranches",
      "GetBranches": "organization/getBranches",
      "SaveBranch": "organization/saveBranch",
      "UpdateBranch": "organization/updateBranch",
      "DeleteBranch": "organization/deleteBranch"
    },
    "ActivityLog": {
      "AllActivities": "activities/allActivities",
      "InsertActivity": "activities/saveActivity"
    },
    "Departments": {
      "DepartmentById": "departments/getDepartmentById",
      "DepartmentByName": "departments/getDepartmentByName",
      "AllDepartments": "departments/allDepartments",
      "GetDepartments": "departments/getDepartments",
      "InsertDepartment": "departments/saveDepartment",
      "UpdateDepartment": "departments/updateDepartment",
      "DeleteDepartment": "departments/deleteDepartment",
      "AllUnits": "departments/allUnits",
      "GetUnits": "departments/getUnits",
      "UnitById": "departments/getUnitById",
      "UnitByName": "departments/getUnitByName",
      "InsertUnit": "departments/saveUnit",
      "DeleteUnit": "departments/updateUnit",
      "UpdateUnit": "departments/deleteUnit"
    },
    "Errors": {
      "CaptureError": "errors/saveerror"
    },
    "LanguageOptions": {
      "DefaultCulture": "en",
      "SupportedCultures": [ "en", "am", "fr", "de" ]
    }
  }
}
